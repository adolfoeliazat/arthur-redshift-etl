[
    {
        "Name": "Ping data warehouse",
        "Args": [
            "/tmp/redshift_etl/venv/bin/arthur.py",
            "--config",
            "/tmp/redshift_etl/config/",
            "ping",
            "--prolix"
        ],
        "Jar": "command-runner.jar",
        "Type": "CUSTOM_JAR",
        "ActionOnFailure": "TERMINATE_JOB_FLOW",
        "Properties": ""
    },
    {
        "Name": "Load (skip-copy, #{etl_environment})",
        "Args": [
            "/tmp/redshift_etl/venv/bin/arthur.py",
            "--config",
            "/tmp/redshift_etl/config/",
            "load",
            "--skip-copy",
            "--prolix",
            "--prefix",
            "#{etl_environment}"
        ],
        "Jar": "command-runner.jar",
        "Type": "CUSTOM_JAR",
        "ActionOnFailure": "CONTINUE",
        "Properties": ""
    },
    {
        "Name": "Validate (files in S3)",
        "Args": [
            "/tmp/redshift_etl/venv/bin/arthur.py",
            "--config",
            "/tmp/redshift_etl/config/",
            "validate",
            "--prolix",
            "--prefix",
            "#{etl_environment}",
            "--remote"
        ],
        "Jar": "command-runner.jar",
        "Type": "CUSTOM_JAR",
        "ActionOnFailure": "TERMINATE_CLUSTER",
        "Properties": ""
    }
]
